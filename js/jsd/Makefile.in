DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
VPATH		= @srcdir@
srcdir		= @srcdir@
relativesrcdir  = @relativesrcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= jsdebug
LIBRARY_NAME	= jsd
DIRS	= idl
CPPSRCS	 = \
		jsd_xpc.cpp \
		jshash.cpp
IS_COMPONENT = 1
LIBXUL_LIBRARY = 1

MODULE_NAME = JavaScript_Debugger
EXPORT_LIBRARY = 1

XPCSHELL_TESTS  = test

# REQUIRES	= java js

EXPORTS		= jsdebug.h

ifdef JS_THREADSAFE
DEFINES         += -DJS_THREADSAFE
endif

CSRCS		= \
		  jsdebug.c \
		  jsd_atom.c \
		  jsd_high.c \
		  jsd_hook.c \
		  jsd_lock.c \
		  jsd_obj.c \
		  jsd_scpt.c \
		  jsd_stak.c \
		  jsd_step.c \
		  jsd_text.c \
		  jsd_val.c \
		  $(NULL)

ifdef ENABLE_TESTS
TOOL_DIRS		+= test
endif

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DEXPORT_JSD_API
