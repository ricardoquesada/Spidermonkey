DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
VPATH		= @srcdir@
srcdir		= @srcdir@
relativesrcdir  = @relativesrcdir@

include $(DEPTH)/config/autoconf.mk

LIBRARY_NAME	= jsd
CPPSRCS	 = \
		jsd_xpc.cpp \
		jshash.cpp
IS_COMPONENT = 1
LIBXUL_LIBRARY = 1

MODULE_NAME = JavaScript_Debugger
EXPORT_LIBRARY = 1

DISABLED_XPCSHELL_TESTS  = test

# REQUIRES	= java js

ifdef JS_THREADSAFE
DEFINES         += -DJS_THREADSAFE
endif

CPPSRCS		+= \
		  jsdebug.cpp \
		  jsd_atom.cpp \
		  jsd_high.cpp \
		  jsd_hook.cpp \
		  jsd_lock.cpp \
		  jsd_obj.cpp \
		  jsd_scpt.cpp \
		  jsd_stak.cpp \
		  jsd_step.cpp \
		  jsd_text.cpp \
		  jsd_val.cpp \
		  $(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DEXPORT_JSD_API
